        // State
        let answers = {};
        let currentSection = 'overview';

        // Section Navigation
        function showSection(sectionId) {
            document.querySelectorAll('section[id^="section-"]').forEach(s => {
                s.classList.add('hidden');
            });
            
            const target = document.getElementById(`section-${sectionId}`);
            if (target) {
                target.classList.remove('hidden');
                target.classList.add('fade-in');
            }
            
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
                btn.classList.add('text-white/50');
            });
            const activeTab = document.querySelector(`[data-tab="${sectionId}"]`);
            if (activeTab) {
                activeTab.classList.add('active');
                activeTab.classList.remove('text-white/50');
            }
            
            currentSection = sectionId;
        }

        // Initialize Quiz
        function initQuiz() {
            const container = document.getElementById('questions-container');
            const progressBar = document.getElementById('progress-bar');
            
            progressBar.innerHTML = questions.map((_, i) => `
                <div id="progress-${i}" class="progress-segment flex-1 h-1.5 rounded-full bg-white/10"></div>
            `).join('');
            
            container.innerHTML = questions.map((q, idx) => `
                <div id="question-${q.id}" class="question-card rounded-xl p-5 fade-in" style="animation-delay: ${idx * 0.05}s">
                    <div class="flex items-start gap-3 mb-4">
                        <div class="w-8 h-8 rounded-lg flex-shrink-0 flex items-center justify-center font-semibold text-sm ${
                            q.study === 'evered' ? 'bg-amber/20 text-amber' :
                            q.study === 'engages' ? 'bg-violet/20 text-violet' :
                            'bg-teal/20 text-teal-light'
                        }">
                            ${q.id}
                        </div>
                        <div class="flex-1">
                            <div class="text-[10px] font-semibold tracking-wider uppercase mb-1 ${
                                q.study === 'evered' ? 'text-amber' :
                                q.study === 'engages' ? 'text-violet' :
                                'text-teal-light'
                            }">
                                ${q.study === 'evered' ? 'Evered et al.' : 
                                  q.study === 'engages' ? 'ENGAGES' : 
                                  'Integrated'}
                            </div>
                            <h3 class="font-medium leading-snug text-white/90">${q.question}</h3>
                        </div>
                    </div>
                    
                    <div class="space-y-2 ml-11">
                        ${q.options.map((opt, i) => `
                            <button 
                                onclick="selectAnswer(${q.id}, ${i})"
                                id="q${q.id}-opt${i}"
                                class="option-btn w-full text-left px-3 py-2.5 rounded-lg text-sm text-white/70 hover:text-white"
                            >
                                <span class="inline-block w-5 h-5 rounded bg-white/10 text-center text-xs leading-5 mr-2 font-medium">
                                    ${String.fromCharCode(65 + i)}
                                </span>
                                ${opt}
                            </button>
                        `).join('')}
                    </div>
                    
                    <div id="explanation-${q.id}" class="hidden mt-4 ml-11 p-3 rounded-lg bg-white/5 border border-white/10">
                        <div class="text-sm text-white/70 leading-relaxed">
                            <span class="font-medium text-teal-light">Explanation: </span>${q.explanation}
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Handle Answer Selection
        function selectAnswer(questionId, optionIndex) {
            if (answers[questionId] !== undefined) return;
            
            const question = questions.find(q => q.id === questionId);
            const isCorrect = optionIndex === question.correct;
            answers[questionId] = { selected: optionIndex, correct: isCorrect };
            
            question.options.forEach((_, i) => {
                const btn = document.getElementById(`q${questionId}-opt${i}`);
                btn.classList.add('answered');
                
                if (i === question.correct) {
                    btn.classList.add('correct');
                } else if (i === optionIndex && !isCorrect) {
                    btn.classList.add('incorrect');
                }
            });
            
            document.getElementById(`explanation-${questionId}`).classList.remove('hidden');
            
            const progressIdx = questions.findIndex(q => q.id === questionId);
            const progressEl = document.getElementById(`progress-${progressIdx}`);
            progressEl.classList.remove('bg-white/10');
            progressEl.classList.add(isCorrect ? 'bg-teal' : 'bg-coral');
            
            updateScore();
        }

        // Update Score
        function updateScore() {
            const correctCount = Object.values(answers).filter(a => a.correct).length;
            document.getElementById('score').textContent = correctCount;
        }

        // Reset Quiz
        function resetQuiz() {
            answers = {};
            initQuiz();
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            initQuiz();
        });
    </script>
</body>
</html>
